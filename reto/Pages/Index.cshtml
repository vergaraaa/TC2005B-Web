@page
@model IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" href="~/img/icon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BOOTSTRAP-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!-- MY STYLES -->
    <link rel="stylesheet" href="~/css/login.css">
    <title>Asistente de Entrenamiento de Inspector</title>
</head>

<body>
    <video src="~/videos/el-alma-de-me-xico-loop.mp4" loop muted autoplay id="background-video"></video>

    @if (@Model.Error != "")
    {
        <div class="alert alert-custom alert-dismissible fade show position-absolute start-50 translate-middle-x" style="width: 85%; top: 2%;" role="alert">
            <h4 class="alert-heading">@Model.Error</h4>
            <button type="button" class="btn-close btn-lg text-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row align-items-center vh-100 justify-content-center mx-3">
        <div class="col-md-6">
            <div class="card login-form py-3">
                <img src="~/img/logo.png" class="card-img-top mx-auto my-3" alt="Logo Ternium" id="logo">
                <div class="card-body">
                    <form method="post">
                        <div class="col-lg-8 mt-3 mb-5 mx-auto">
                            <label for="username" class="h3">Usuario</label>
                            <input type="text" name="username" class="form-control form-control-lg" asp-for="User.Username" required>
                        </div>
                        <div class="col-lg-8 mb-5 mx-auto">
                            <label for="password" class="h3">Contraseña</label>
                            <input type="password" name="password" class="form-control form-control-lg" asp-for="User.Password" required>
                        </div>
                        <div class="col-lg mb-3 text-center">
                            <input type="submit" class="btn mybtn btn-lg px-5" value="Iniciar sesión" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>