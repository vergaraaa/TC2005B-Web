    ViewData["Title"] = "Examen";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg">
            <div class="row h-100 mb-5 align-items-end">
                <div class="col-lg-12 text-center" style="font-size: 1.25rem;">
                    Tomar&aacute;s el examen seleccionado en la siguiente lista.
                </div>
            </div>
            <div class="row mb-5 align-items-start">
                <div class="col-lg-4 mx-auto">
                    <select class="custom-select">
                        <option selected>Seleccionar examen</option>
