<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/img/icon.ico" />
    <title>@ViewData["Title"] - Asistente de Entrenamiento de Inspector</title>
    <!-- FONT AWESOME CDN -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- MY STYLES -->
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light my-font my-bg border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Profile"><img src="~/img/logo.png" alt="Logo Ternium" style="width: 175px;" id="logo"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link ml-4 px-4 btn-lg @(Context.Request.Path == "/Profile" ? "active-menu": "")" asp-page="/Profile">PERFIL</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link ml-4 px-4 btn-lg @(Context.Request.Path == "/Play" ? "active-menu": "")" asp-page="/Play">JUGAR</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link ml-4 px-4 btn-lg @(Context.Request.Path == "/Exam" ? "active-menu": "")" asp-page="/Exam">EXAMEN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link ml-4 px-4 btn-lg @(Context.Request.Path == "/Leaderboard" ? "active-menu": "")" asp-page="/Leaderboard">LEADERBOARD</a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link btn-lg" asp-page="/Index"><i class="fas fa-sign-out-alt"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
